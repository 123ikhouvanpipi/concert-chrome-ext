{
  "manifest_version": 2,
  "name": "Roblox Speeltijd Tracker",
  "version": "1.0",
  "description": "Houdt bij hoe lang je op Roblox hebt gespeeld.",
  "permissions": ["storage", "activeTab"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.roblox.com/*"],
      "js": ["content.js"]
    }
  ]
}
